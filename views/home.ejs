<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>homepage</title>
    <style>
        .card {
            width: 18rem;
            /* height: 350px; Fixed height for uniformity */
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .card:hover {
            transform: scale(1.045);
            transition: all ease-in-out 0.5s;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .card .btn-primary {
            margin-top: auto;
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            border: none;
            color: white;
            padding: 10px 15px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 5px;
            transition: 0.3s ease-in-out;
        }

        .card .btn-primary:hover {
            background: linear-gradient(45deg, #ff8e53, #ff6b6b);
            transform: scale(1.1);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>
    <%- include('./partials/navbar') %>
   
    <div class="container mt-3">
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text">
                                <%= blog.body.slice(0, 50) %>...
                            </p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script') %>
</body>

</html>