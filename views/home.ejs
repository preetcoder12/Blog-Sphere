<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #FFF8F2; /* Soft warm background */
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 30px;
            color: #D95D39; /* Warm coral color */
        }

        .card {
            width: 100%;
            height: auto;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: #FFF; /* White for cards */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 250px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card-img-top:hover {
            transform: scale(1.1);
        }

        .card-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: bold;
            color: #D95D39; /* Warm coral color */
        }

        .card-text {
            font-size: 1rem;
            color: #666;
            line-height: 1.6;
        }

        .card .btn-primary {
            margin-top: auto;
            background: linear-gradient(45deg, #F6A58C, #FF6B6B); /* Light orange to coral gradient */
            border: none;
            color: white;
            padding: 12px 20px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 5px;
            transition: 0.3s ease-in-out;
            cursor: pointer;
        }

        .card .btn-primary:hover {
            background: linear-gradient(45deg, #FF6B6B, #F6A58C);
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        /* Responsive Layout */
        @media (max-width: 768px) {
            .row {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>

<body>
    <%- include('./partials/navbar') %>

    <div class="container mt-3">
        <h1>Blogs</h1>
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4">
                    <div class="card">
                        <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text">
                                <%= blog.body.slice(0, 50) %>...
                            </p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
