<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>
    <%= blog.title %>
  </title>
  <style>
    /* Blog Container */
    .blog-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 20px;
    }

    /* Blog Header */
    .blog-header {
      text-align: center;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid #eaeaea;
    }

    .blog-title {
      font-size: 2.5rem;
      color: #D95D39;
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .blog-meta {
      color: #6A4E32;
      font-size: 0.95rem;
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
    }

    .blog-meta span {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    /* Blog Cover Image */
    .blog-cover-image {
      width: 100%;
      max-height: 500px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .blog-cover-image:hover {
      transform: scale(1.045);
    }

    /* Blog Content */
    .blog-content {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #4a5568;
      margin-bottom: 3rem;
    }

    .blog-content p {
      margin-bottom: 1.5rem;
    }

    .blog-content pre {
      white-space: pre-wrap;
      font-family: sans-serif;
      overflow-x: auto;
      padding: 1rem;
      background-color: #f8f9fa;
      border: 1px solid #ced4da;
      border-radius: 5px;
      font-size: 1rem;
      line-height: 1.6;
    }

    /* Author Section */
    .author-section {
      display: flex;
      align-items: center;
      gap: 1rem;
      background: #f7fafc;
      padding: 1.5rem;
      border-radius: 8px;
      margin-top: 3rem;
    }

    .author-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
    }

    .author-avatar-2 {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .author-info {
      flex: 1;
    }

    .author-name {
      font-weight: 600;
      color: #6A4E32;
      margin-bottom: 0.25rem;
    }

    .author-contact {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #6c757d;
      font-size: 0.95rem;
    }

    .author-contact a {
      color: #6c757d;
      text-decoration: none;
    }

    .author-contact a:hover {
      text-decoration: underline;
    }

    /* Comment Section */
    .comment-section {
      margin-top: 3rem;
    }

    .comment-list {
      list-style: none;
      padding: 0;
    }

    .comment {
      display: flex;
      align-items: flex-start;
      margin-bottom: 1.5rem;
      padding: 1rem;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      background-color: #f8f8f8;
    }

    .comment.author-avatar {
      width: 40px;
      height: 40px;
      margin-right: 1rem;
    }

    .comment.comment-info {
      flex: 1;
    }

    .comment.author-name {
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }

    .comment.comment-content {
      font-size: 0.95rem;
      line-height: 1.6;
      white-space: pre-wrap;
    }

    .comment.comment-meta {
      font-size: 0.8rem;
      color: #6c757d;
      margin-top: 0.5rem;
    }

    /* Comment Form */
    .comment-form {
      margin-top: 2rem;
    }

    .comment-form textarea {
      width: 100%;
      padding: 1rem;
      border: 1px solid #ced4da;
      border-radius: 5px;
      resize: vertical;
    }

    .comment-form button {
      margin-top: 0.5rem;
    }

    /* Reading Progress Bar */
    .reading-progress {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background-color: #e9ecef;
      z-index: 1000;
    }

    .reading-progress-bar {
      height: 100%;
      background-color: #D95D39;
      width: 0%;
      transition: width 0.2s ease;
    }

    /* Related Link Styling */
    .related-link {
      font-size: 1.1rem;
      font-weight: bold;
      color: #333;
      margin-bottom: 1rem;
      background-color: #f7f7f7;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease-in-out;
    }

    .related-link:hover {
      background-color: #f2f2f2;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .related-link-url {
      color: #D95D39;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .related-link-url:hover {
      color: #C74C2C;
      text-decoration: underline;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .blog-title {
        font-size: 2rem;
      }

      .blog-meta {
        gap: 1rem;
      }

      .author-section {
        flex-direction: column;
        align-items: flex-start;
      }

      .author-avatar {
        margin-bottom: 1rem;
      }

      /* Adjust Related Link for Small Screens */
      .related-link {
        font-size: 1rem;
        padding: 8px;
      }

      .related-link-url {
        font-size: 1rem;
      }
    }
  </style>
</head>

<body>
  <%- include('./partials/navbar') %>

  <div class="reading-progress">
    <div class="reading-progress-bar" id="progressBar"></div>
  </div>

  <div class="blog-container">
    <article>
      <header class="blog-header">
        <h1 class="blog-title">
          <%= blog.title %>
        </h1>
        <div class="blog-meta">
          <span>
            <i class="far fa-calendar"></i>
            <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
            day: 'numeric' }) %>
          </span>
          <span>
            <i class="far fa-clock"></i>
            <%= Math.ceil(blog.body.split(' ').length / 200) %> min read
          </span>
          <span>
            <i class="far fa-user"></i>
            by <%= blog.createdBy.fullname %>
          </span>
        </div>
      </header>

      <img src="<%= blog.coverImage %>" alt="<%= blog.title %>" class="blog-cover-image">
      <div class="container mb-2">
        <!-- link -->
        <p class="related-link">
          <strong>Related Link:</strong> 
          <a href="<%= blog.link %>" target="_blank" class="related-link-url"><%= blog.link %></a>
        </p>
      </div>
      <div class="blog-content">
        <pre><%= blog.body %></pre>
      </div>

      <div class="author-section">
        <img src="<%= blog.createdBy.profileImg %>" alt="" class="author-avatar">
        <div class="author-info">
          <h2 class="author-name">Created by: <%= blog.createdBy.fullname %></h2>
          <div class="author-contact">
            <i class="far fa-envelope"></i> <a href="mailto:<%= blog.createdBy.email %>"><%= blog.createdBy.email %></a>
          </div>
        </div>
      </div>

      <div class="comment-section">
        <h1>Comments</h1>
        <% if (locals.user) { %>
        <form method="post" action="/blog/comment/<%= blog._id %>" class="comment-form">
          <textarea id="comment" class="form-control" name="comment" placeholder="Enter your thoughts..." rows="4"></textarea>
          <button class="btn btn-sm btn-success" type="submit">Comment</button><br>
        </form>

        <ul class="comment-list">
          <% comments.forEach(comment => { %>
          <li class="comment">
            <img src="<%= blog.createdBy.profileImg %>" alt="" class="author-avatar-2">
            <div class="comment-info">
              <h2 class="author-name">
                <%= comment.createdBy.fullname %>
              </h2>
              <p class="comment-content">
                <%= comment.content %>
              </p>
              <div class="comment-meta">
                <%= new Date(comment.createdAt).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                day: 'numeric' }) %> at <%= new Date(comment.createdAt).toLocaleTimeString('en-US', { hour: 'numeric' ,
                  minute: 'numeric' }) %>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </div>
    </article>
  </div>

  <%- include('./partials/script') %>
  <script>
    // Reading progress bar
    window.addEventListener('scroll', () => {
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      document.getElementById('progressBar').style.width = scrolled + '%';
    });
  </script>

</body>

</html>
